<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.sportsleaguemanagementproject.ui.MatchMakerScreenController">
   <VBox alignment="CENTER" layoutY="-1.0" prefHeight="400.0" prefWidth="600.0">
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <Label alignment="TOP_LEFT" prefHeight="18.0" prefWidth="142.0" text="Host" />
         <TextField fx:id="hostField" alignment="CENTER" prefHeight="26.0" prefWidth="143.0" />
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0">
         <Label prefHeight="18.0" prefWidth="142.0" text="Team 1" />
         <TextField fx:id="team1Field" />
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="110.0" prefHeight="100.0" prefWidth="200.0">
         <Label prefHeight="18.0" prefWidth="140.0" text="Team 2" />
         <TextField fx:id="team2Field" />
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="210.0" prefHeight="100.0" prefWidth="200.0">
         <Label prefHeight="18.0" prefWidth="146.0" text="Number of Overs" />
         <TextField fx:id="oversField" />
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="310.0" prefHeight="100.0" prefWidth="200.0">
         <Label prefHeight="18.0" prefWidth="152.0" text="Location" />
         <TextField fx:id="locationField" />
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="330.0" prefHeight="100.0" prefWidth="200.0">
         <Label prefHeight="18.0" prefWidth="170.0" text="Date of Match" />
         <DatePicker fx:id="dateOfMatchField" />
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="344.0" prefHeight="100.0" prefWidth="200.0">
         <Label prefHeight="18.0" prefWidth="157.0" text="Start Time" />
         <TextField fx:id="startTimeField" />
      </HBox>
      <HBox alignment="CENTER" layoutX="10.0" layoutY="353.0" prefHeight="100.0" prefWidth="200.0">
         <Label prefHeight="18.0" prefWidth="164.0" text="Duration(Minutes)" />
         <TextField fx:id="durationMinutesField" />
      </HBox>
      <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#onConfirmButton" prefHeight="25.0" prefWidth="82.0" text="Confirm" />
   </VBox>
</AnchorPane>
