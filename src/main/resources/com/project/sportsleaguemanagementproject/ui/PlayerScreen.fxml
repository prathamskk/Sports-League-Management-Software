<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.project.sportsleaguemanagementproject.ui.PlayerScreenController">
   <BorderPane fx:id="borderPane" layoutY="-3.0" prefHeight="800.0" prefWidth="1280.0">
      <left>
         <VBox alignment="CENTER" prefHeight="800.0" prefWidth="200.0" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
               <Button mnemonicParsing="false" onAction="#viewTournamentList" text="Tournament List" />
               <Button mnemonicParsing="false" onAction="#registerPlayer" text="register new player" />
               <Button fx:id="logoutButton" mnemonicParsing="false" onAction="#logout" text="logout" />
            </children>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            <padding>
               <Insets bottom="15.0" top="15.0" />
            </padding>
         </VBox>
      </left>
      <center>
         <Label text="Successful user login" BorderPane.alignment="CENTER" />
      </center>
      <top>
         <HBox prefHeight="100.0" prefWidth="1280.0" style="-fx-background-color: grey;" BorderPane.alignment="CENTER" />
      </top>
   </BorderPane>
</AnchorPane>
